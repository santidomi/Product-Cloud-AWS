<section class='p-4 bg-warning'>
  <h1 class='text-primary text-center text-primary'>LOG IN (INICIAR SESIÓN)</h1>

  <div class='mb-3'>
    <form action='/login' method='POST'>
      <div>
        <label class='form-label text-primary fs-3' for='login'>Ingrese email y contraseña</label>
        <input type='text' id='inputUser' name='username' class='form-control' placeholder='email' required />
        <input type='text' id='inputPass' name='password' class='form-control' placeholder='contraseña' required />
      </div>
      <br />
      <input type='submit' class='btn btn-primary d-block mx-auto' value='Ingresar!' />
    </form>
    <button type='button' class='btn btn-outline-dark'><a href='./signup' style='text-decoration: none;'>Sign Up</a></button>

  </div>

</section>